@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<div class="card-body p-4">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Введит  email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" placeholder="Введите пароль" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3 mb-3">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="checkbox-signin" checked>
                <label class="form-check-label" for="checkbox-signin">Remember me</label>
            </div>
        </div>

        @*Уведомление пользователя*@
        @if (TempData["statusMessage"] != null)
        {
            <div class="alert-danger mb-1">
                @TempData["statusMessage"]
            </div>
        }

        <div class="mb-3 text-center">
            <button class="btn btn-primary" type="submit"> Войти </button>
        </div>

        <div class="row mt-3">
            <div class="col-12 text-center">
                <p class="text-muted">У вас нет учетной записи?  <a asp-action="Register" class="text-muted ms-1"><b>Регистрация</b></a></p>
            </div> <!-- end col-->
        </div>
    </form>


</div> <!-- end card-body -->
<!-- end row -->
<!-- end row -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
